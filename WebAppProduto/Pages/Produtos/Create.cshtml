@page
@model WebAppProduto.Pages.Produtos.CreateModel
@{
}

<h1 class="text-center">Cadastro de Produto</h1>

<form method="post">
    <!-- Container formulário -->
    <div class="row d-flex justify-content-center box-shadow">
        <!--Coluna 1-->
        <div class="col-md-8 row g-3">
            <!--Campo nome-->
            <div class="col-12">
                <div class="form-group">
                    <label for="nome" class="control-label">Nome</label>
                    <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome do produto" required />
                </div>
            </div>
            <!--Campo setor-->
            <div class="col-md-9">
                <div class="form-group">
                    <label for="setor" class="control-label">Setor</label>
                    <select class="custom-select col-12" aria-label="Selecione o departamento" id="setor" name="setor" required>
                        <option label="Selecione"></option>
                        <option value="Feminino">Feminino</option>
                        <option value="Masculino">Masculino</option>
                        <option value="Infantil">Infantil</option>
                    </select>
                </div>
            </div>
            <!--Campo quantidade-->
            <div class="col-md-3">
                <div class="form-group">
                    <label for="quantidade" class="control-label">Quantidade</label>
                    <input type="number" class="form-control" id="quantidade" name="quantidade" placeholder="Qtd" min="1" required />
                </div>
            </div>
            <!--Campo local-->
            <div class="col-md-6">
                <div class="form-group">
                    <label for="local" class="control-label">Local</label>
                    <input type="text" class="form-control" id="local" name="local" placeholder="Local de armazenamento" required />
                </div>
            </div>
            <!--Campo tipo-->
            <div class="col-md-6">
                <div class="form-group">
                    <label for="tipo" class="control-label">Tipo</label>
                    <input type="text" class="form-control" id="tipo" name="tipo" placeholder="Tipo" required />
                </div>
            </div>
            <!--Campo fornecedor-->
            <div class="col-md-8">
                <div class="form-group">
                    <label for="fornecedor" class="control-label">Fornecedor</label>
                    <!--<input type="text" class="form-control" id="fornecedor" name="fornecedor" placeholder=""/>-->
                    <select class="custom-select col-12" aria-label="Default select example" id="fornecedor" name="fornecedor" required>
                        <option label="Selecione"></option>
                        <option value="Moda Atacado LTDA">Moda Atacado LTDA</option>
                        <option value="Allied Express">Allied Express</option>
                        <option value="Kaisan Moda">Kaisan Moda</option>
                    </select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="codigo" class="control-label">Código</label>
                    <input type="number" class="form-control" id="codigo" name="codigo" placeholder="Cód" />
                </div>
            </div>
            <!--Container Enviar arquivo IMAGEM-->
            <div class="form-group col-12">
                <label for="tipo" class="control-label">Imagem</label>
                <input type="text" class="form-control" id="image" name="image" placeholder="Insira a URL da imagem" />
            </div>
            <!--Botões Inferiores-->
            <div class="col-12 d-flex flex-wrap justify-content-end" id="group-btn-create">
                <a class="btn btn-secondary mr-3"
                   asp-area=""
                   asp-page="/Produtos/Index">Cancelar</a>
                <input type="submit" value="Criar" class="btn btn-success" />
            </div>

        </div>
    </div>

</form>